SubDir HAIKU_TOP src apps cherryblossom ;

UsePrivateHeaders interface shared storage tracker ;

local sourceDirs =
	interface
	views
;

local sourceDir ;
for sourceDir in $(sourceDirs) {
        SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) src apps cherry-blossom $(sourceDir) ] ;
}


Application CherryBlossom :
	#interface
	DrawingTidbits.cpp
	PeakView.cpp
	PositionToolTip.cpp
	SeekSlider.cpp
	#TransportButton.cpp
	VolumeSlider.cpp
	
	# Cherry Blossom
	AlbumView.cpp
	ArtistView.cpp
	CherryBlossom.cpp
	CherryBlossomWindow.cpp
	GenreView.cpp
	MusicView.cpp
	PlayListView.cpp
	SearchView.cpp
	SongView.cpp

	: be liblocale.so libcolumnlistview.a libshared.a $(TARGET_LIBSUPC++)
;

DoCatalogs CherryBlossom :
	x-vnd.CherryBlossom
	:
	AlbumView.cpp
	ArtistView.cpp
	CherryBlossom.cpp
	CherryBlossomWindow.cpp
	CherryBlossomView.cpp
	GenreView.cpp
	MusicView.cpp
	PlayListView.cpp
	SearchView.cpp
	SongView.cpp
	: en.catalog
	;
